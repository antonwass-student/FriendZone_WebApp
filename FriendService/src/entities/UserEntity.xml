<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="entities.UserEntity">
        <table name="User" schema="dbo" catalog="community"/>
        <attributes>
            <id name="userId">
                <column name="user_id" precision="-1"/>
            </id>
            <basic name="name">
                <column name="name" length="64"/>
            </basic>
            <basic name="email">
                <column name="email" length="128"/>
            </basic>
            <basic name="password">
                <column name="password" length="512"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
